# Configurações de Porta do Servidor
# ===================================

# Porta principal do servidor de produção
PORT=3000

# Porta do servidor de desenvolvimento Vite
VITE_PORT=8080

# Porta da API backend (se separada)
API_PORT=3001

# Porta do banco de dados (se local)
DATABASE_PORT=5432

# URL base para desenvolvimento
VITE_BASE_URL=http://localhost:8080

# URL da API para o frontend
VITE_API_URL=http://localhost:3000/api

# Ambiente atual
NODE_ENV=development

# Configurações do banco de dados
DATABASE_URL=postgresql://localhost:5432/ecko_landing

# Chave secreta para JWT (se usado)
JWT_SECRET=your_jwt_secret_key_here

# Configurações de CORS
CORS_ORIGIN=http://localhost:8080

# Configuração de proxy reverso
PROXY_TARGET_PORT=8080
